<div class="exporter-wrapper">

  <div class="exporter-header">
    <h2>Exporter</h2>
    <div class="exporter-options">
      <% @set.accepted.each do |type| %>
      <div class="btn btn-info btn-large"><%= type.to_s.humanize %></div>
      <% end %>
    </div>
  </div>

  <div class="exporter-preview-wrapper">
    <div class="exporter-preview-header">
      <h3>Preview</h3>
    </div>
    <div class="exporter-preview-table-wrapper">
      <table class="table table-bordered table-condensed">
        <thead>
          <tr>
            <% @set.export_column_headers().each do |cell| %>
            <th><%= cell %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @set.export_content().each do |row| %>
          <tr>
            <% row.each do |cell| %>
            <td><%= cell %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
